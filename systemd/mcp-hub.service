[Unit]
Description=CSA MCP Hub
Documentation=https://github.com/RyderFreeman4Logos/cli-sub-agent
After=network.target
Requires=mcp-hub.socket

[Service]
Type=simple
ExecStart=%h/.cargo/bin/csa mcp-hub serve --foreground --systemd-activation
Restart=on-failure
RestartSec=1

[Install]
WantedBy=default.target
